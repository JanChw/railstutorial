<% provide(:title, 'Sign in') %>
<h1> Sign in</h1>

<div class="row">
	<div class="col-md-6 col-md-offset-3">
		<%= form_for :session, url: sessions_path, html: {class: "form-horizontal"} do |f| %>
				
				<div class="form-group">
					<%= f.label :email, "邮箱", class: "col-sm-2 control-label" %>
					<div class="col-sm-4">
						<%= f.text_field :email, class: "form-control", placeholder: "请输入邮箱" %>
					</div>
				</div>
				<div class="form-group">
					<%= f.label :password, "密码", class: "col-sm-2 control-label" %>
					<div class="col-sm-4">
						<%= f.password_field :password, class: "form-control", placeholder: "请输入密码" %>
					</div>
				</div>

				<div class="col-sm-offset-2">
					<%= f.label :remember_token, "记住我" %>
					
					<%= f.check_box :remember_token %>
					
				</div>
				
				<div class="form-group">
					<div class="col-sm-offset-2 col-sm-10">
						<%= f.submit "登陆", class: "btn btn-primary" %>
					</div>
				</div>
		<% end %>
		<p>New user? <%= link_to "Sign up now!", signup_path %></p>
	</div>
</div>